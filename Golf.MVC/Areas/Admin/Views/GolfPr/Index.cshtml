@using Golf.DAL.Models
@model List<GolfPr>
<!-- Table Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-6">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Basic Table</h6>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Location</th>
                            <th scope="col">Name</th>
                            <th scope="col">Price</th>
                            <th scope="col">Description</th>
                            <th scope="col">Img</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <th scope="row">@item.Id</th>
                                <td>@item.Location</td>
                                <td>@item.Name</td>
                                <td>@item.Price</td>
                                <td>@item.Description</td>
                                <td>< img src="~/admin/assets/image/@item.ImgUrl"></></td>
                                <td>
                                    <a asp-area="admin" asp-controller="GolfPr" asp-action="Info" asp-route-id="@item.Id">Info</a>
                                    <a asp-area="admin" asp-controller="GolfPr" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                    <a asp-area="admin" asp-controller="GolfPr" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>

                        }
                        <a asp-area="admin" asp-controller="GolfPr" asp-action="Create">Create</a>
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>
<!-- Table End -->
